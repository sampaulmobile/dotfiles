ENVS=('DEMO' 'PROD' 'BIO')
HOST_TYPES=('MAIN' 'ACT' 'ANA' 'AIR')
SERVICES=('PG' 'RESQ')

tunnel_ports() {
    str=""
    for e in $ENVS; do
        for h in $HOST_TYPES; do
            port="${h}_PG_PORT_${e}"
            post="${h}_PG_HOST_${e}"
            echo port: ${(P)port}
            echo host: ${(P)host}
            str+=${(P)port}
            # echo port: ${!port}
        done
    done
    echo $str
}

